<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_layout_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="#293235">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="550dp"
        android:layout_height="400dp"
        app:lottie_rawRes="@raw/water2"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="0.4"
        android:scaleType="fitCenter"
        android:onClick="onClickButtonHome"
        />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textViewNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        >
    </androidx.fragment.app.FragmentContainerView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieTimerEnd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="45dp"
        app:lottie_rawRes="@raw/home_button"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="0.4"
        android:scaleType="fitCenter"
        android:onClick="onClickButtonHome"
        />
<!--    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity=""
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        app:lottie_rawRes="@raw/water"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="0.4"
        android:scaleType="fitCenter"
        android:onClick="onClickButtonHome"
        />-->

</FrameLayout>